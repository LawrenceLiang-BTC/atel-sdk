{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://atel.dev/schemas/capability.v0.1.json",
  "title": "ATEL Capability",
  "description": "Capability declaration for the ATEL protocol (cap.v0.1)",
  "type": "object",
  "required": ["cap_id", "version", "provider", "capabilities"],
  "properties": {
    "cap_id": { "type": "string", "format": "uuid" },
    "version": { "type": "string", "const": "cap.v0.1" },
    "provider": { "type": "string", "pattern": "^did:atel:.+" },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string" },
          "description": { "type": "string" },
          "input_schema": { "type": "object" },
          "output_schema": { "type": "object" },
          "constraints": {
            "type": "object",
            "properties": {
              "max_risk_level": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
              "supported_settlements": {
                "type": "array",
                "items": { "type": "string", "enum": ["offchain", "onchain"] }
              },
              "max_cost": { "type": "number", "minimum": 0 },
              "currency": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "endpoint": { "type": "string", "format": "uri" },
    "signature": {
      "type": "object",
      "required": ["alg", "sig"],
      "properties": {
        "alg": { "type": "string", "const": "ed25519" },
        "sig": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
