{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://atel.dev/schemas/task.v0.1.json",
  "title": "ATEL Task",
  "description": "Task envelope for the ATEL protocol (task.v0.1)",
  "type": "object",
  "required": ["task_id", "version", "issuer", "intent", "risk", "nonce"],
  "properties": {
    "task_id": { "type": "string", "format": "uuid" },
    "version": { "type": "string", "const": "task.v0.1" },
    "issuer": { "type": "string", "pattern": "^did:atel:.+" },
    "audience": {
      "type": "array",
      "items": { "type": "string", "pattern": "^did:atel:.+" }
    },
    "intent": {
      "type": "object",
      "required": ["type", "goal"],
      "properties": {
        "type": { "type": "string" },
        "goal": { "type": "string" },
        "constraints": { "type": "object" }
      },
      "additionalProperties": false
    },
    "risk": {
      "type": "object",
      "required": ["level"],
      "properties": {
        "level": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
        "requires_human_confirm": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "economics": {
      "type": "object",
      "properties": {
        "max_cost": { "type": "number", "minimum": 0 },
        "currency": { "type": "string" },
        "settlement": { "type": "string", "enum": ["offchain", "onchain"] }
      },
      "additionalProperties": false
    },
    "deadline": { "type": "string", "format": "date-time" },
    "context_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "ref"],
        "properties": {
          "type": { "type": "string" },
          "ref": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "nonce": { "type": "string", "minLength": 1 },
    "signature": {
      "type": "object",
      "required": ["alg", "sig"],
      "properties": {
        "alg": { "type": "string", "const": "ed25519" },
        "sig": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
